---
import Layout from '../../layouts/Layout.astro';
import modules from '../../../.data-cache/modules.json';

export function getStaticPaths() {
  return modules.map((m: any) => ({
    params: { name: m.moduleId },
    props: { module: m },
  }));
}

const { module } = Astro.props;

const displayName = module.moduleName || module.moduleId;
const description = module.summary || module.moduleName || "No description provided.";

const authors = module.authors || [];

const latestRelease = module.releases && module.releases.length > 0 ? module.releases[0] : null;
const sourceUrl = module.sourceUrl || `https://github.com/KernelSU-Modules-Repo/${module.moduleId}`;

const readmeHTML = module.readmeHTML || '';
---

<Layout title={`${displayName} - KernelSU Modules`} description={description}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {/* Header */}
        <div class="mb-8">
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-slate-400 mb-4">
                <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Modules</a>
                <span>/</span>
                <span class="text-gray-900 dark:text-slate-200 truncate">{module.moduleId}</span>
            </div>
            <div class="flex items-center gap-3 mb-4">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">{displayName}</h1>
                {module.metamodule && (
                    <span class="px-3 py-1 rounded-lg text-sm font-bold bg-gradient-to-r from-purple-500 to-pink-500 text-white border border-purple-400 dark:border-pink-400 shadow-lg flex-shrink-0">
                        META
                    </span>
                )}
            </div>
            <p class="text-lg text-gray-600 dark:text-slate-400 max-w-3xl leading-relaxed">{description}</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            {/* Main Content: README & Releases */}
            <div class="lg:col-span-3 space-y-12">
                {/* README */}
                <div class="bg-white dark:bg-slate-900/50 rounded-2xl border border-gray-200 dark:border-slate-800 p-8 shadow-sm">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        README
                    </h2>
                    <article class="markdown-body">
                        <Fragment set:html={readmeHTML} />
                    </article>
                </div>

                {/* Releases History */}
                <div class="space-y-6">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Release History
                    </h2>
                    {module.releases && module.releases.length > 0 ? (
                        <div class="grid gap-4">
                            {module.releases.map((release) => (
                                <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-gray-200 dark:border-slate-800 p-6 transition-all hover:border-blue-500/30 hover:shadow-lg hover:shadow-blue-500/5">
                                    <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-4 mb-4">
                                        <div>
                                            <div class="flex items-center gap-3 mb-1">
                                                <h3 class="text-lg font-bold text-gray-900 dark:text-white">{release.tagName}</h3>
                                                {release.isPrerelease && (
                                                    <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-500/10 text-yellow-700 dark:text-yellow-500 border border-yellow-200 dark:border-yellow-500/20">
                                                        Pre-release
                                                    </span>
                                                )}
                                            </div>
                                            <div class="text-sm text-gray-500 dark:text-slate-400 flex items-center gap-2">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                Published on {new Date(release.publishedAt).toLocaleDateString(undefined, { dateStyle: 'long' })}
                                            </div>
                                        </div>
                                        {release.releaseAssets && release.releaseAssets.length > 0 ? (
                                            <a 
                                                href={release.releaseAssets[0].downloadUrl}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center justify-center px-4 py-2 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors shadow-lg shadow-blue-500/20"
                                            >
                                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                                </svg>
                                                Download
                                            </a>
                                        ) : (
                                            <a 
                                                href={release.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center justify-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-slate-300 bg-gray-100 dark:bg-slate-800 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors"
                                            >
                                                View Release
                                            </a>
                                        )}
                                    </div>
                                    {release.descriptionHTML && (
                                        <div class="markdown-body markdown-body-sm bg-gray-50 dark:bg-slate-950/50 rounded-lg p-4 border border-gray-100 dark:border-slate-800/50">
                                            <Fragment set:html={release.descriptionHTML} />
                                        </div>
                                    )}
                                </div>
                            ))}
                        </div>
                    ) : (
                        <div class="text-center py-12 bg-white dark:bg-slate-900/50 rounded-xl border border-gray-200 dark:border-slate-800">
                            <p class="text-gray-500 dark:text-slate-400">No releases found for this module.</p>
                        </div>
                    )}
                </div>
            </div>

            {/* Sidebar: Details & Latest Release */}
            <div class="lg:col-span-1">
                <div class="sticky top-24 space-y-6">
                    {/* Details Card */}
                    <div class="bg-white dark:bg-slate-900/50 rounded-2xl border border-gray-200 dark:border-slate-800 p-6 shadow-sm backdrop-blur-sm">
                        <h3 class="text-sm font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-4">Module Details</h3>
                        
                        <div class="space-y-4">
                            <div>
                                <div class="text-xs text-gray-500 dark:text-slate-500 mb-1">Module ID</div>
                                <div class="font-mono text-sm text-gray-900 dark:text-slate-200 bg-gray-100 dark:bg-slate-950/50 px-2 py-1 rounded border border-gray-200 dark:border-slate-800 inline-block break-all">
                                    {module.moduleId}
                                </div>
                            </div>

                            {authors.length > 0 && (
                                <div>
                                    <div class="text-xs text-gray-500 dark:text-slate-500 mb-1">Authors</div>
                                    <div class="flex flex-wrap gap-2">
                                        {authors.map(author => (
                                            <a 
                                                href={author.link || `https://github.com/${author.name}`} 
                                                target="_blank" 
                                                class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-slate-800 text-gray-700 dark:text-slate-300 hover:bg-blue-50 dark:hover:bg-blue-900/30 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                                            >
                                                <img src={`https://github.com/${author.name}.png?size=32`} alt="" class="w-4 h-4 rounded-full" />
                                                {author.name}
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            )}

                            <div class="pt-4 border-t border-gray-100 dark:border-slate-800">
                                <div class="grid grid-cols-2 gap-4">
                                    <div class="text-center p-3 bg-gray-50 dark:bg-slate-950/30 rounded-xl border border-gray-100 dark:border-slate-800/50">
                                        <div class="text-2xl font-bold text-gray-900 dark:text-white">{module.stargazerCount}</div>
                                        <div class="text-xs text-gray-500 dark:text-slate-500 font-medium">Stars</div>
                                    </div>
                                    <div class="text-center p-3 bg-gray-50 dark:bg-slate-950/30 rounded-xl border border-gray-100 dark:border-slate-800/50">
                                        <div class="text-2xl font-bold text-gray-900 dark:text-white">{module.releases?.length || 0}</div>
                                        <div class="text-xs text-gray-500 dark:text-slate-500 font-medium">Releases</div>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-4 space-y-3">
                                {module.website && (
                                    <a href={module.website} target="_blank" class="flex items-center justify-center w-full px-4 py-2.5 rounded-lg text-sm font-medium text-gray-700 dark:text-slate-300 bg-gray-100 dark:bg-slate-800 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                                        </svg>
                                        Website
                                    </a>
                                )}
                                <a href={sourceUrl} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-full px-4 py-2.5 rounded-lg text-sm font-medium text-white dark:text-slate-200 bg-gray-900 dark:bg-slate-800 border border-transparent dark:border-slate-600 hover:bg-gray-800 dark:hover:bg-slate-700 dark:hover:border-slate-500 transition-all">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                                    </svg>
                                    Source Code
                                </a>
                            </div>
                        </div>
                    </div>

                    {/* Latest Release Card (Small) */}
                    {latestRelease && (
                        <div class="bg-gradient-to-br from-blue-50 to-violet-50 dark:from-blue-900/20 dark:to-violet-900/20 rounded-2xl border border-blue-100 dark:border-blue-500/20 p-6 shadow-sm relative overflow-hidden group">
                            <div class="absolute top-0 right-0 w-24 h-24 bg-blue-500/10 rounded-full blur-2xl -mr-12 -mt-12 transition-all group-hover:bg-blue-500/20"></div>
                            
                            <div class="relative">
                                <div class="flex items-center justify-between mb-2">
                                    <h3 class="text-sm font-semibold text-blue-800 dark:text-blue-200 uppercase tracking-wider">Latest Version</h3>
                                    <span class="flex h-2 w-2">
                                        <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-blue-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
                                    </span>
                                </div>
                                <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">{latestRelease.tagName}</div>
                                <div class="text-sm text-gray-500 dark:text-slate-400 mb-4">
                                    Released {new Date(latestRelease.publishedAt).toLocaleDateString()}
                                </div>
                                {latestRelease.releaseAssets && latestRelease.releaseAssets.length > 0 ? (
                                    <a 
                                        href={latestRelease.releaseAssets[0].downloadUrl} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="block w-full text-center px-4 py-2 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors shadow-lg shadow-blue-500/20"
                                    >
                                        Download Now
                                    </a>
                                ) : (
                                    <a 
                                        href={latestRelease.url} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="block w-full text-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-slate-300 bg-gray-100 dark:bg-slate-800 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors"
                                    >
                                        View Release
                                    </a>
                                )}
                            </div>
                        </div>
                    )}
                </div>
            </div>
        </div>
    </div>
</Layout>

<style is:global>
    /* GitHub Markdown Styles Override */
    .markdown-body {
        background-color: transparent !important;
        color: inherit;
    }

    .markdown-body img {
        border-radius: 0.75rem;
    }

    .markdown-body pre {
        border-radius: 0.75rem;
    }

    .markdown-body-sm {
        font-size: 0.875rem;
    }

    .markdown-body-sm pre,
    .markdown-body-sm code {
        font-size: 0.8rem;
    }

    /* Dark mode support for .dark class */
    .dark .markdown-body {
        color-scheme: dark;
        --color-prettylights-syntax-comment: #8b949e;
        --color-prettylights-syntax-constant: #79c0ff;
        --color-prettylights-syntax-entity: #d2a8ff;
        --color-prettylights-syntax-storage-modifier-import: #c9d1d9;
        --color-prettylights-syntax-entity-tag: #7ee787;
        --color-prettylights-syntax-keyword: #ff7b72;
        --color-prettylights-syntax-string: #a5d6ff;
        --color-prettylights-syntax-variable: #ffa657;
        --color-prettylights-syntax-brackethighlighter-unmatched: #f85149;
        --color-prettylights-syntax-invalid-illegal-text: #f0f6fc;
        --color-prettylights-syntax-invalid-illegal-bg: #8e1519;
        --color-prettylights-syntax-carriage-return-text: #f0f6fc;
        --color-prettylights-syntax-carriage-return-bg: #b62324;
        --color-prettylights-syntax-string-regexp: #7ee787;
        --color-prettylights-syntax-markup-list: #f2cc60;
        --color-prettylights-syntax-markup-heading: #1f6feb;
        --color-prettylights-syntax-markup-italic: #c9d1d9;
        --color-prettylights-syntax-markup-bold: #c9d1d9;
        --color-prettylights-syntax-markup-deleted-text: #ffdcd7;
        --color-prettylights-syntax-markup-deleted-bg: #67060c;
        --color-prettylights-syntax-markup-inserted-text: #aff5b4;
        --color-prettylights-syntax-markup-inserted-bg: #033a16;
        --color-prettylights-syntax-markup-changed-text: #ffdfb6;
        --color-prettylights-syntax-markup-changed-bg: #5a1e02;
        --color-prettylights-syntax-markup-ignored-text: #c9d1d9;
        --color-prettylights-syntax-markup-ignored-bg: #1158c7;
        --color-prettylights-syntax-meta-diff-range: #d2a8ff;
        --color-prettylights-syntax-sublimelinter-gutter-mark: #484f58;
        --color-fg-default: #e6edf3;
        --color-fg-muted: #848d97;
        --color-fg-subtle: #6e7681;
        --color-canvas-default: transparent;
        --color-canvas-subtle: #161b22;
        --color-border-default: #30363d;
        --color-border-muted: #21262d;
        --color-neutral-muted: rgba(110,118,129,0.4);
        --color-accent-fg: #2f81f7;
        --color-accent-emphasis: #1f6feb;
        --color-success-fg: #3fb950;
        --color-success-emphasis: #238636;
        --color-attention-fg: #d29922;
        --color-attention-emphasis: #9e6a03;
        --color-attention-subtle: rgba(187,128,9,0.15);
        --color-danger-fg: #f85149;
        --color-danger-emphasis: #da3633;
        --color-done-fg: #a371f7;
        --color-done-emphasis: #8957e5;
    }

    .dark .markdown-body pre {
        background-color: #161b22 !important;
        border: 1px solid #30363d;
    }

    .dark .markdown-body code {
        background-color: rgba(110,118,129,0.4);
    }

    .dark .markdown-body pre code {
        background-color: transparent;
    }

    .dark .markdown-body a {
        color: #58a6ff;
    }

    .dark .markdown-body hr {
        background-color: #30363d;
    }

    .dark .markdown-body blockquote {
        border-color: #30363d;
        color: #8b949e;
    }

    .dark .markdown-body table tr {
        background-color: transparent;
        border-color: #30363d;
    }

    .dark .markdown-body table tr:nth-child(2n) {
        background-color: #161b22;
    }

    .dark .markdown-body table th,
    .dark .markdown-body table td {
        border-color: #30363d;
    }

    /* Task list checkbox styling */
    .markdown-body .task-list-item {
        list-style-type: none;
    }

    .markdown-body .task-list-item input[type="checkbox"] {
        margin-right: 0.5rem;
    }

    /* GitHub Alerts styling */
    .markdown-body .markdown-alert {
        padding: 0.5rem 1rem;
        margin-bottom: 1rem;
        border-left: 4px solid;
        border-radius: 0.375rem;
    }

    .markdown-body .markdown-alert-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .markdown-body .markdown-alert-title svg {
        width: 1rem;
        height: 1rem;
    }

    /* Note - Blue */
    .markdown-body .markdown-alert-note {
        background-color: rgba(59, 130, 246, 0.1);
        border-color: #3b82f6;
    }
    .markdown-body .markdown-alert-note .markdown-alert-title {
        color: #3b82f6;
    }

    /* Tip - Green */
    .markdown-body .markdown-alert-tip {
        background-color: rgba(34, 197, 94, 0.1);
        border-color: #22c55e;
    }
    .markdown-body .markdown-alert-tip .markdown-alert-title {
        color: #22c55e;
    }

    /* Important - Purple */
    .markdown-body .markdown-alert-important {
        background-color: rgba(168, 85, 247, 0.1);
        border-color: #a855f7;
    }
    .markdown-body .markdown-alert-important .markdown-alert-title {
        color: #a855f7;
    }

    /* Warning - Yellow/Orange */
    .markdown-body .markdown-alert-warning {
        background-color: rgba(234, 179, 8, 0.1);
        border-color: #eab308;
    }
    .markdown-body .markdown-alert-warning .markdown-alert-title {
        color: #eab308;
    }

    /* Caution - Red */
    .markdown-body .markdown-alert-caution {
        background-color: rgba(239, 68, 68, 0.1);
        border-color: #ef4444;
    }
    .markdown-body .markdown-alert-caution .markdown-alert-title {
        color: #ef4444;
    }

    /* Dark mode alerts */
    .dark .markdown-body .markdown-alert-note {
        background-color: rgba(59, 130, 246, 0.15);
    }
    .dark .markdown-body .markdown-alert-tip {
        background-color: rgba(34, 197, 94, 0.15);
    }
    .dark .markdown-body .markdown-alert-important {
        background-color: rgba(168, 85, 247, 0.15);
    }
    .dark .markdown-body .markdown-alert-warning {
        background-color: rgba(234, 179, 8, 0.15);
    }
    .dark .markdown-body .markdown-alert-caution {
        background-color: rgba(239, 68, 68, 0.15);
    }
</style>
